        <section id="la-revista" class="container-fluid section-2">
            <div class="row">
                <div class="col text-center">
                    <div class="primary-heading">
                        Actividad Solar y Estelar de<span class="fw-bold primary-heading-bold">Múltiples Escalas</span>
                    </div>
                </div>
            </div>
        </section>



        <!-- SECTION NO 6 -->
         <div class="row">
                <div class="col text-center">
